<LinearLayout
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="#272C63"
        android:orientation="vertical"
        android:textDirection="ltr"
        android:layoutDirection="ltr"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
                    android:id="@+id/layContainer" android:orientation="vertical" android:layout_weight="1"
                    android:layout_width="match_parent" android:layout_height="match_parent"
                        android:layout_marginStart="16dp" android:layout_marginEnd="16dp">

        </LinearLayout>


        <LinearLayout
                  android:id="@+id/layBottomBar" android:orientation="horizontal" android:layout_weight="6"
                  android:layout_width="match_parent" android:layout_height="match_parent"
                        android:layout_marginStart="16dp" android:layout_marginEnd="16dp">

                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="match_parent">

                        <ImageButton android:id="@+id/btnExit"
                                     android:layout_width="85dp" android:layout_height="85dp"
                                     android:layout_alignParentStart="true"
                                     android:layout_centerVertical="true" android:tint="#CA2C20"
                                     android:background="#00000000"
                                     android:scaleX="-1" android:scaleType="fitXY"
                                     android:src="@drawable/ic_exit"/>

                        <ImageButton android:id="@+id/btnAbout"
                                     android:layout_width="70dp" android:layout_height="70dp"
                                     android:layout_centerInParent="true" android:tint="#FF5722"
                                     android:background="#00000000"
                                     android:scaleX="-1" android:scaleType="fitXY"
                                     android:src="@drawable/ic_about"/>

                        <ImageButton android:id="@+id/btnAddNote"
                                     android:layout_alignParentEnd="true"
                                     android:layout_width="85dp" android:layout_height="85dp"
                                     android:layout_centerVertical="true" android:tint="#06910B"
                                     android:background="#00000000"
                                     android:scaleX="-1" android:scaleType="fitXY"
                                     android:src="@drawable/ic_add"/>


                </RelativeLayout>



        </LinearLayout>




</LinearLayout>