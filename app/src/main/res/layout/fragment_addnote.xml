<RelativeLayout
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="@drawable/back_notecontent"
        android:layout_marginTop="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android">


    <requestFocus/>
    <EditText
        android:id="@+id/txtTitle"
        android:focusable="true"
        android:layout_width="match_parent" android:layout_height="60dp"
        android:background="#00000000"  android:maxLines="1" android:scrollbars="horizontal"
        android:scrollbarAlwaysDrawHorizontalTrack="true"  android:paddingStart="10dp"
        android:inputType="text"
        android:hint="  Note title ..."
        android:lines="1" android:textSize="20sp" android:textColor="#000000"
        android:textColorHint="#6D6A6A" android:layout_alignParentStart="true" android:layout_alignParentTop="true"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="2dp"
                  android:layout_marginStart="3dp" android:layout_marginEnd="3dp"
                  android:background="#000000" android:layout_below="@id/txtTitle" android:layout_marginTop="3dp"/>

    <EditText
            android:id="@+id/txtBody"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:background="#00000000" android:padding="10dp"
            android:scrollbars="vertical" android:inputType="textMultiLine"
            android:scrollbarAlwaysDrawVerticalTrack="true" android:scrollbarFadeDuration="0"
            android:hint="  Note content ..." android:textSize="20sp" android:textColor="#000000"
            android:textColorHint="#6D6A6A" android:layout_below="@id/txtTitle" android:layout_marginTop="10dp"
            android:gravity="start" />


    <ImageButton android:id="@+id/btnSaveNote"
                 android:layout_width="85dp" android:layout_height="85dp"
                 android:layout_alignParentEnd="true" android:layout_alignParentBottom="true"
                 android:layout_marginBottom="10dp" android:layout_marginEnd="10dp"
                 android:tint="#06910B" android:background="#00000000"
                 android:scaleX="-1" android:scaleType="fitXY"
                 android:src="@drawable/ic_save"/>

</RelativeLayout>